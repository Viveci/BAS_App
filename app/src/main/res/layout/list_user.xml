<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/user_color"
        android:background="#DDDDDD"></FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UserName8"
        android:id="@+id/user_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_color"
        android:textColor="#333333"
        android:layout_marginLeft="5dp"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="cpr"
        android:id="@+id/user_cpr"
        android:textColor="#777777"
        android:textSize="14dp"
        android:layout_below="@+id/user_name"
        android:layout_alignStart="@+id/user_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="email"
        android:id="@+id/user_email"
        android:textColor="#777777"
        android:textSize="14dp"
        android:layout_below="@+id/user_cpr"
        android:layout_alignStart="@+id/user_role" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="role"
        android:id="@+id/user_role"
        android:textStyle="italic"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/user_color"
        android:layout_alignStart="@+id/user_name" />

</RelativeLayout>