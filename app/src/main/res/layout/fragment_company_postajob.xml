<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogReg"
        android:background="#EEEEEE"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comp_paj_heading"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Job name "
                android:id="@+id/comp_paj_name_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textViewcomp_paj_name_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_name_label"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comp_paj_about"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_below="@+id/comp_paj_heading"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="About the job"
                android:id="@+id/comp_paj_about_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_about_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_about_label"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/comp_paj_skills"
            android:layout_below="@+id/comp_paj_about"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/listView"
                android:layout_below="@+id/comp_paj_skills_label"
                android:layout_alignStart="@+id/comp_paj_skills_label"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Skills &amp; Keywords"
                android:id="@+id/comp_paj_skills_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add skills or keyword"
                android:id="@+id/button2"
                android:layout_below="@+id/listView"
                android:background="@drawable/button_shpe_blue"
                android:layout_alignEnd="@+id/listView"
                android:layout_alignStart="@+id/listView"
                android:textColor="#EEEEEE"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comp_paj_skills"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/comp_paj_details">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Details"
                android:id="@+id/com_paj_detials_label"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comp_paj_details_spiner"
                android:spinnerMode="dialog"
                android:layout_below="@+id/comp_paj_details_paymentype"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Payment type"
                android:id="@+id/comp_paj_details_paymentype"
                android:textColor="#555555"
                android:layout_below="@+id/com_paj_detials_label"
                android:layout_alignStart="@+id/com_paj_detials_label"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Start date"
                android:id="@+id/comp_paj_details_start"
                android:textColor="#555555"
                android:layout_below="@+id/comp_paj_details_spiner"
                android:layout_alignStart="@+id/comp_paj_details_spiner"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_detials_start_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_details_start"
                android:layout_alignStart="@+id/comp_paj_details_start"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="End date"
                android:id="@+id/comp_paj_details_end"
                android:textColor="#555555"
                android:layout_below="@+id/comp_paj_detials_start_text"
                android:layout_alignStart="@+id/comp_paj_detials_start_text"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_details_end_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_details_end"
                android:layout_alignLeft="@+id/comp_paj_detials_start_text"
                android:layout_alignEnd="@+id/comp_paj_detials_start_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Deadline"
                android:id="@+id/comp_paj_detials_deadline"
                android:textColor="#555555"
                android:layout_below="@+id/comp_paj_details_end_text"
                android:layout_alignStart="@+id/comp_paj_details_end_text"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_detials_deadline_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_detials_deadline"
                android:layout_alignLeft="@+id/comp_paj_details_end_text"
                android:layout_alignEnd="@+id/comp_paj_details_end_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ammount"
                android:id="@+id/comp_paj_details_ammount"
                android:textColor="#555555"
                android:layout_below="@+id/comp_paj_detials_deadline_text"
                android:layout_alignStart="@+id/comp_paj_detials_deadline_text"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_details_ammount_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_below="@+id/comp_paj_details_ammount"
                android:layout_alignLeft="@+id/comp_paj_detials_deadline_text"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Number of position"
                android:id="@+id/comp_paj_details_number"
                android:textColor="#555555"
                android:layout_below="@+id/comp_paj_details_ammount_text"
                android:layout_alignStart="@+id/comp_paj_details_ammount_text"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/comp_paj_details_number_text"
                android:singleLine="true"
                android:textColor="#333333"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/comp_paj_details_number"
                android:layout_alignLeft="@+id/comp_paj_details_ammount_text"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comp_paj_details"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="#EEEEEE"
            android:id="@+id/comp_paj_buttons">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post a job"
                android:id="@+id/comp_paj_post"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/frameLayout23"
                android:background="@drawable/button_shape"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draft"
                android:id="@+id/comp_paj_buttons_draft"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/frameLayout23"
                android:textStyle="bold"
                android:textColor="@color/bcg"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_shape_gery" />

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout23"></FrameLayout>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>