<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="75dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="None"
        android:id="@+id/list_comp_rating_label"
        android:textColor="#666666"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/list_comp_rating_star1"
        android:layout_alignTop="@+id/list_comp_rating_label"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_star_empty" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/list_comp_rating_star2"
        android:src="@drawable/ic_star_empty"
        android:layout_alignBottom="@+id/list_comp_rating_star1"
        android:layout_toEndOf="@+id/list_comp_rating_star1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/list_comp_rating_star3"
        android:src="@drawable/ic_star_empty"
        android:layout_alignBottom="@+id/list_comp_rating_star2"
        android:layout_toEndOf="@+id/list_comp_rating_star2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/list_comp_rating_star4"
        android:src="@drawable/ic_star_empty"
        android:layout_alignBottom="@+id/list_comp_rating_star3"
        android:layout_toEndOf="@+id/list_comp_rating_star3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/list_comp_rating_star5"
        android:src="@drawable/ic_star_empty"
        android:layout_alignBottom="@+id/list_comp_rating_star4"
        android:layout_toEndOf="@+id/list_comp_rating_star4" />
</RelativeLayout>