<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:clickable="false"
    android:focusable="false">

    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:id="@+id/list_comp_img"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/list_comp_title"
        android:textColor="#444444"
        android:textSize="18dp"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/list_comp_img"
        android:layout_toEndOf="@+id/list_comp_img"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/list_comp_type"
        android:textColor="#777777"
        android:textSize="18dp"
        android:singleLine="true"
        android:layout_below="@+id/list_comp_title"
        android:layout_alignStart="@+id/list_comp_title"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/list_comp_desc"
        android:textColor="#999999"
        android:layout_below="@+id/list_comp_type"
        android:layout_alignStart="@+id/list_comp_title"
        android:layout_alignParentEnd="true"
        android:maxLines="2"
        android:layout_above="@+id/list_comp_date"
        android:ellipsize="end"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_comp_date"
        android:textColor="#999999"
        android:maxLines="2"
        android:layout_alignBottom="@+id/list_comp_img"
        android:layout_alignStart="@+id/list_comp_desc"
        android:clickable="false"
        android:focusable="false" />
</RelativeLayout>